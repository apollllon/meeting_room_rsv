<%= form_for(@room) do |f| %>
  <%= render 'shared/room_error_messages', object: @room %>
  <%= f.label :name, "会議室名" %>
  <%= f.text_field :name, class: 'form-control' %>
  
  <%= f.label :capacity, "収容人数" %>
  <%= f.number_field :capacity, class: 'form-control' %>
  
  <%= f.label :price, "利用金額" %>
  <%= f.number_field :price, class: 'form-control' %>

  <%= f.label :open_at, "使用可能時間（開始）" %>
  <%= f.time_field :open_at, class: 'form-control' %>
  
  <%= f.label :close_at, "使用可能時間（終了）" %>
  <%= f.time_field :close_at, class: 'form-control' %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
