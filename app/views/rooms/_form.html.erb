<div class="col-md-6 col-md-offset-3">
  <%= form_for(@room) do |f| %>
    <%= f.label :name, "会議室名" %>
    <%= f.text_field :name %>
    
    <%= f.label :capacity, "収容人数" %>
    <%= f.number_field :capacity %>
    
    <%= f.label :price, "利用金額" %>
    <%= f.number_field :price %>

    <%= f.label :open_at, "使用可能時間（開始）" %>
    <%= f.time_field :open_at %>
    
    <%= f.label :close_at, "使用可能時間（終了）" %>
    <%= f.time_field :close_at %>

    <%= f.submit "登録", class: "btn btn-primary" %>
  <% end %>
</div>