<% provide(:button_text, '編集を保存') %>
<div class="container">
  <h1><%= @room.name %> の編集</h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= render "form"%>
      <%= button_to "消去", @room, {class: "btn-danger", method: :delete, data: {confirm: "すでにされている予約も全て消去されます。本当に消去しますか？"}} %>
    </div>
  </div>
</div>